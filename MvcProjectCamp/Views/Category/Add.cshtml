@model Entities.Concrete.Category
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("Add", "Category", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.Name)
    @Html.ValidationMessageFor(x => x.Name)
    <br />
    <br />
    @Html.Label("Açıklama Yazınız")
    @Html.TextBoxFor(x => x.Description)
    @Html.ValidationMessageFor(x => x.Description)
    <br />
    <br />
    <button class="btn btn-warning">Kaydet</button>
</div>
}

