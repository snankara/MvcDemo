@using Entities.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        @*<th>Yetkiyi Kaldır</th>*@
        <th>Yetki Değiştir</th>
    </tr>

    @foreach (var admin in Model)
    {
        <tr>
            <th>@admin.AdminId</th>
            <td>@admin.UserName</td>
            <td>@admin.AdminRole</td>
            <td>Aktif</td>
            @*<td><a href="/Authorization/Delete/@admin.AdminId " class="btn btn-outline-danger btn-sm">Yetkiyi Kaldır</a></td>*@
            <td><a href="/Authorization/Update/@admin.AdminId" class="btn btn-warning btn-sm">Yetki Değiştir</a></td>
        </tr>
    }

</table>
<a href="/Authorization/AdminAdd" class="btn btn-info">Admin Tanımla</a>
