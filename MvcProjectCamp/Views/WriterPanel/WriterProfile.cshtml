@model Entities.Concrete.Writer
@{
    ViewBag.Title = "WriterProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Bilgilerinizi Güncelleyin </h2>
<br />
@using (Html.BeginForm("WriterProfile", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(w => w.WriterId)

        @Html.Label("Yazar Adı")
        @Html.TextBoxFor(w => w.FirstName, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar Soyadı")
        @Html.TextBoxFor(w => w.LastName, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar Mail")
        @Html.TextBoxFor(w => w.Email, new { @class = "form-control" })
        <br />
        @Html.Label("Şifre")
        @Html.TextBoxFor(w => w.Password, new { @class = "form-control" })
        <br />
        @Html.Label("Fotoğraf Linki")
        @Html.TextBoxFor(w => w.Image, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar Unvan")
        @Html.TextBoxFor(w => w.Title, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar Hakkında")
        @Html.TextBoxFor(w => w.WriterAbout, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Güncelle</button>
    </div>
}


