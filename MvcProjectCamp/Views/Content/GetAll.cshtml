@using Entities.Concrete
@model List<Content>

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("GetAll", "Content", FormMethod.Post))
{
    <p>
        Aranacak Kelime: @Html.TextBox("key")
        <input type="submit" required value="Ara" class="btn btn-success btn-sm" />
    </p>
}

@foreach (var item in Model)
{
    <p>@item.ContentText</p>
}

@if (Model.Count == 0)
{
    <p>Aradğınızı bulamadık !</p>
}

