
@{
    ViewBag.Title = "SweetAlert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<br />
<button class="btn btn-outline-info" id="btn1">Button 1</button>
<button class="btn btn-outline-warning" id="btn2">Button 2</button>
<button class="btn btn-outline-danger" id="btn3">Button 2</button>

<script>
    $('#btn1').click(function () {
        swal("Hello world!");
    });
    $('#btn2').click(function () {
        swal("Here's the title!", "...and here's the text!");
    });
    $('#btn3').click(function () {
        swal("Good job!", "You clicked the button!", "success");
    });
</script>
