@using Entities.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>

    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <th>@category.CategoryId</th>
            <td>@category.Name</td>
            <td><a href="/AdminCategory/Delete/@category.CategoryId" class="btn btn-danger btn-sm">Sil</a></td>
            <td><a href="/AdminCategory/Update/@category.CategoryId" class="btn btn-warning btn-sm">Güncelle</a></td>
            <td><a href="#" class="btn btn-primary btn-sm">Başlıklar</a></td>
        </tr>
    }

</table>
<a href="/AdminCategory/Add" class="btn btn-info">Kategori Ekle</a>